<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
  "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
  "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">

  <!-- TreeWalker is the main module that inspects code structure -->
  <module name="TreeWalker">

    <!-- Warn about empty code blocks -->
    <module name="EmptyBlock"/>

    <!-- Prevent unused imports -->
    <module name="UnusedImports"/>

    <!-- Catch inconsistent indentation -->
    <module name="Indentation">
      <property name="basicOffset" value="2"/>
      <property name="tabWidth" value="2"/>
    </module>

    <!-- Enforce naming conventions -->
    <module name="MethodName">
      <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
    </module>
    <module name="VariableName">
      <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
    </module>
    <module name="ParameterName">
      <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
    </module>
    <module name="ClassName">
      <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
    </module>

    <!-- Limit line length -->
    <module name="LineLength">
      <property name="max" value="120"/>
      <property name="ignorePattern" value="^package.*|^import.*"/>
    </module>

    <!-- Ensure there's no trailing whitespace -->
    <module name="TrailingWhitespace"/>

    <!-- Make sure files end with a newline -->
    <module name="NewlineAtEndOfFile"/>

    <!-- Avoid magic numbers (you can disable this if too strict) -->
    <module name="MagicNumber">
      <property name="ignoreNumbers" value="-1,0,1"/>
      <property name="ignoreHashCodeMethod" value="true"/>
    </module>

  </module>

  <!-- Optional: Ignore package-level javadoc -->
  <module name="JavadocPackage">
    <property name="severity" value="ignore"/>
  </module>

</module>
