<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
  "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
  "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">

  <module name="TreeWalker">

    <!-- Warn on empty blocks -->
    <module name="EmptyBlock"/>

    <!-- Warn on unused imports -->
    <module name="UnusedImports"/>

    <!-- Check indentation (2 spaces) -->
    <module name="Indentation">
      <property name="basicOffset" value="2"/>
      <property name="tabWidth" value="2"/>
    </module>

    <!-- Enforce method, class, and variable naming conventions -->
    <module name="MethodName">
      <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
    </module>
    <module name="LocalVariableName">
      <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
    </module>
    <module name="MemberName">
      <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
    </module>
    <module name="ParameterName">
      <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
    </module>
    <module name="ClassName">
      <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
    </module>

    <!-- Line length limit (ignore imports/packages) -->
    <module name="LineLength">
      <property name="max" value="120"/>
      <property name="ignorePattern" value="^package.*|^import.*"/>
    </module>

    <!-- Catch trailing whitespace -->
    <module name="TrailingWhitespace"/>

    <!-- Ensure newline at end of file -->
    <module name="NewlineAtEndOfFile"/>

    <!-- Warn about magic numbers, except common ones -->
    <module name="MagicNumber">
      <property name="ignoreNumbers" value="-1,0,1"/>
      <property name="ignoreHashCodeMethod" value="true"/>
    </module>

  </module>

  <!-- Ignore package-level Javadoc checks -->
  <module name="JavadocPackage">
    <property name="severity" value="ignore"/>
  </module>

</module>
