<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.sourceforge.io/dtds/configuration_1_3.dtd">
<module name="Checker">
    <module name="TreeWalker">
        <!-- Disable Javadoc checks -->
        <module name="JavadocType">
            <property name="severity" value="ignore"/>
        </module>
        <module name="JavadocMethod">
            <property name="severity" value="ignore"/>
        </module>
        <module name="JavadocVariable">
            <property name="severity" value="ignore"/>
        </module>
        <module name="JavadocPackage">
            <property name="severity" value="ignore"/>
        </module>

        <!-- Allow longer line lengths -->
        <module name="LineLength">
            <property name="severity" value="ignore"/>
        </module>

        <!-- Disable naming convention checks -->
        <module name="MethodName">
            <property name="format" value=".*"/>
        </module>
        <module name="VariableName">
            <property name="format" value=".*"/>
        </module>
        <module name="ParameterName">
            <property name="format" value=".*"/>
        </module>
        <module name="PackageName">
            <property name="format" value=".*"/>
        </module>

        <!-- Disable magic number checks -->
        <module name="MagicNumber">
            <property name="severity" value="ignore"/>
        </module>

        <!-- Disable indentation checks -->
        <module name="Indentation">
            <property name="severity" value="ignore"/>
        </module>

        <!-- Disable empty block checks -->
        <module name="EmptyBlock">
            <property name="severity" value="ignore"/>
        </module>

        <!-- Disable unused imports checks -->
        <module name="UnusedImports">
            <property name="severity" value="ignore"/>
        </module>

        <!-- Disable newline at end of file check -->
        <module name="NewlineAtEndOfFile">
            <property name="severity" value="ignore"/>
        </module>

        <!-- Allow wildcard imports -->
        <module name="AvoidStarImport">
            <property name="severity" value="ignore"/>
        </module>
    </module>
</module>
